{
  "name": "shopping-list",
  "version": "1.0.0",
  "description": "A full-stack shopping list application developed to learn MERN stack development and deployment.",
  "main": "server.js",
  "scripts": {
    "client-install": "yarn --cwd ./client install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "repository": "git@github.com:dvnnorth/shopping-list.git",
  "author": "dvnnorth <13654540+dvnnorth@users.noreply.github.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "express": "^4.16.3",
    "mongoose": "^5.2.17"
  },
  "devDependencies": {
    "nodemon": "^1.18.4"
  }
}
